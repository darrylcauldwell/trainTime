# Fastfile for trainTime

default_platform(:ios)

platform :ios do
  desc "Upload metadata and screenshots to App Store Connect"
  lane :metadata do
    upload_to_app_store(
      api_key: app_store_connect_api_key(
        key_id: "2QUU3J6S3D",
        issuer_id: "39bba98a-c143-49fe-ab48-839ff38b4edd",
        key_filepath: "fastlane/AuthKey_2QUU3J6S3D.p8"
      ),
      skip_binary_upload: true,
      skip_app_version_update: true,
      overwrite_screenshots: true,
      submit_for_review: false,
      automatic_release: false,
      precheck_include_in_app_purchases: false
    )
  end

  desc "Push a new beta build to TestFlight"
  lane :beta do
    # Load API key for App Store Connect
    api_key = app_store_connect_api_key(
      key_id: "2QUU3J6S3D",
      issuer_id: "39bba98a-c143-49fe-ab48-839ff38b4edd",
      key_filepath: "fastlane/AuthKey_2QUU3J6S3D.p8"
    )

    # Increment build number
    increment_build_number(
      xcodeproj: "trainTime.xcodeproj"
    )

    # Build the app (automatic signing handles provisioning)
    build_app(
      scheme: "trainTime",
      export_method: "app-store",
      project: "trainTime.xcodeproj",
      destination: "generic/platform=iOS",
      xcargs: "-allowProvisioningUpdates -authenticationKeyPath '#{File.expand_path("fastlane/AuthKey_2QUU3J6S3D.p8")}' -authenticationKeyID 2QUU3J6S3D -authenticationKeyIssuerID 39bba98a-c143-49fe-ab48-839ff38b4edd",
      export_options: {
        signingStyle: "automatic",
        teamID: "N6BK2WX94Z"
      }
    )

    # Upload to TestFlight
    upload_to_testflight(
      api_key: api_key,
      skip_waiting_for_build_processing: true
    )
  end

  desc "Upload metadata, screenshots, and binary to App Store"
  lane :release do
    # Load API key
    api_key = app_store_connect_api_key(
      key_id: "2QUU3J6S3D",
      issuer_id: "39bba98a-c143-49fe-ab48-839ff38b4edd",
      key_filepath: "fastlane/AuthKey_2QUU3J6S3D.p8"
    )

    # Increment build number
    increment_build_number(
      xcodeproj: "trainTime.xcodeproj"
    )

    # Build the app
    build_app(
      scheme: "trainTime",
      export_method: "app-store",
      project: "trainTime.xcodeproj",
      destination: "generic/platform=iOS",
      xcargs: "-allowProvisioningUpdates -authenticationKeyPath '#{File.expand_path("fastlane/AuthKey_2QUU3J6S3D.p8")}' -authenticationKeyID 2QUU3J6S3D -authenticationKeyIssuerID 39bba98a-c143-49fe-ab48-839ff38b4edd",
      export_options: {
        signingStyle: "automatic",
        teamID: "N6BK2WX94Z"
      }
    )

    # Upload everything to App Store Connect
    upload_to_app_store(
      api_key: api_key,
      submit_for_review: false,
      automatic_release: false,
      overwrite_screenshots: true,
      precheck_include_in_app_purchases: false
    )
  end

  desc "Build archive only (no upload)"
  lane :build do
    build_app(
      scheme: "trainTime",
      export_method: "app-store",
      project: "trainTime.xcodeproj",
      destination: "generic/platform=iOS"
    )
  end
end
